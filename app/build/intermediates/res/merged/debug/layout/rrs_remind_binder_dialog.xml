<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rrshare_dialog_nomal_bg">


    <LinearLayout
        android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >

        <TextView
            android:id="@+id/title"
            android:text="TextView-Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="18dp"
            android:gravity="left"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:textColor="#333333"
            />
        <TextView
        android:id="@+id/old_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="16dp"
        android:gravity="left"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:text="TextView-content"
        android:textColor="#333333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
       ></View>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="right"
        android:layout_marginRight="2dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:textColor="@color/default_text_content"
            android:textSize="16dp"
            android:text="@string/common_cancel"/>

        <!--<View-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#DDDDDD"></View>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ok"
            android:text="@string/common_confirm"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#4A90E2"/>
    </LinearLayout>
</LinearLayout>