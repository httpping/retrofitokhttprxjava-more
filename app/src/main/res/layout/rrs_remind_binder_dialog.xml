<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rrshare_dialog_nomal_bg">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >

        <TextView
        android:id="@+id/old_store_name"
        android:text="@string/rr_store_dialog_remind_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:textColor="@color/public_new_black_textcolor"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30dp"
        android:background="@color/index_goodes_divide"></View>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:textColor="@color/default_text_content"
            android:background="@color/transparent"
            android:textSize="16dp"
            android:text="@string/common_cancel"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/index_goodes_divide"></View>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_ok"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/common_confirm"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#4A90E2"/>
    </LinearLayout>
</LinearLayout>